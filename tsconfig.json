{
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    ".next/**/*",
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@const/*": [
        "./src/const/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ],
      "@application/*": [
        "./src/application/*"
      ],
      "@modules/*": [
        "./src/ui/modules/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@assets/*": [
        "./src/ui/assets/*"
      ],
      "@styles/*": [
        "./src/ui/styles/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@i18n/*": [
        "./src/ui/i18n/*"
      ],
      "@mocks/*": [
        "./src/mocks/*"
      ],
      "@types/*": [
        "./src/types/*"
      ]
    }
  }
}
