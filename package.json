{
	"name": "forever-pto",
	"description": "The all-in-one tool to squish your valuable PTO days",
	"keywords": [
		"nextjs",
		"typescript",
		"css",
		"tailwind",
		"cloudflare",
		"pto",
		"seo",
		"turbopack",
		"shadcn"
	],
	"author": "Ferran Buireu <fbuireu@gmail.com>",
	"packageManager": "npm@11.2.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"test:all": "npm run test:ut && npm run test:e2e",
		"test:ut": "vitest --passWithNoTests --logHeapUsage",
		"test:ut:changed": "npm run test:ut -- --bail --findRelatedTests",
		"test:e2e": "playwright test --pass-with-no-tests",
		"test:e2e:ui": "npm run test:e2e -- --ui",
		"test:e2e:changed": "npm run test:e2e -- --only-changed",
		"format": "biome check --write --no-errors-on-unmatched",
		"format:changed": "npm run format -- --changed",
		"format:all": "npm run format .",
		"lint": "biome lint --no-errors-on-unmatched",
		"lint:all": "npm run lint .",
		"lint:all:fix": "npm run lint:all -- --write",
		"lint:changed": "npm run lint -- --changed",
		"lint:changed:fix": "npm run lint -- --write --changed",
		"lint:ts:typecheck": "tsc --project . --noEmit",
		"prepare": "husky"
	},
	"dependencies": {
		"@radix-ui/react-accordion": "^1.2.3",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-popover": "^1.1.6",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slider": "^1.2.3",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-switch": "^1.1.3",
		"@radix-ui/react-tabs": "^1.1.3",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@tanstack/react-table": "^8.21.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"date-holidays": "^3.24.1",
		"i18n-iso-countries": "^7.14.0",
		"lucide-react": "^0.483.0",
		"next": "15.2.3",
		"next-themes": "^0.4.6",
		"react": "^19.0.0",
		"react-day-picker": "^9.6.3",
		"react-dom": "^19.0.0",
		"tailwind-merge": "^3.0.2",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@commitlint/format": "^19.8.0",
		"@tailwindcss/postcss": "^4.0.15",
		"@testing-library/react": "^16.2.0",
		"@types/node": "^22.13.11",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"conventional-changelog-atom": "^5.0.0",
		"husky": "^9.1.7",
		"jsdom": "^26.0.0",
		"lint-staged": "^15.5.0",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.0.15",
		"typescript": "^5.8.2",
		"vitest": "^3.0.9"
	}
}
