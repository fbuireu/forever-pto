{
  "name": "forever-pto",
  "description": "The all-in-one tool to squish your valuable PTO days",
  "keywords": [
    "nextjs",
    "typescript",
    "css",
    "tailwind",
    "cloudflare",
    "pto",
    "time-off",
    "multi-language",
    "seo",
    "turbopack",
    "shadcn",
    "pnpm"
  ],
  "author": "Ferran Buireu <fbuireu@gmail.com>",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "preview": "pnpm run pages:build && wrangler pages dev",
    "pages:build": "npx @cloudflare/next-on-pages",
    "deploy": "pnpm run pages:build && wrangler pages deploy",
    "format:changed": "git diff --name-only --diff-filter=ACMR | grep -E \"\\.(js|jsx|ts|tsx|json|css|scss|md)$\" | xargs -r prettier --write",
    "format:all": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:changed": "git diff --name-only --diff-filter=ACMR | grep -E \"\\.(js|jsx|ts|tsx)$\" | xargs -r eslint --fix",
    "lint:all": "eslint",
    "lint:fix": "eslint --fix",
    "lint:ts:typecheck": "tsc --project . --noEmit",
    "test:e2e": "playwright test --pass-with-no-tests",
    "test:e2e:ui": "pnpm run test:e2e -- --ui",
    "test:e2e:changed": "pnpm run test:e2e -- --only-changed",
    "prepare": "husky"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.14",
    "@headlessui/react": "^2.2.7",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "date-holidays": "^3.25.1",
    "i18n-iso-countries": "^7.14.0",
    "lucide-react": "^0.541.0",
    "motion": "^12.23.12",
    "next": "^15.5.0",
    "next-intl": "^4.3.5",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-use-measure": "^2.1.7",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/format": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-atom": "^5.0.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-next-on-pages": "^1.13.14",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "lint-staged": "^16.1.5",
    "npm": "^11.5.2",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  }
}
