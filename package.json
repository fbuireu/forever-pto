{
	"name": "forever-pto",
	"description": "The all-in-one tool to squish your valuable PTO days",
	"keywords": ["nextjs", "typescript", "css", "tailwind", "cloudflare", "pto", "seo", "turbopack", "shadcn"],
	"author": "Ferran Buireu <fbuireu@gmail.com>",
	"packageManager": "npm@11.3.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"test:all": "npm run test:ut && npm run test:e2e",
		"test:ut": "vitest --passWithNoTests --logHeapUsage",
		"test:ut:changed": "npm run test:ut -- --bail --findRelatedTests",
		"test:e2e": "playwright test --pass-with-no-tests",
		"test:e2e:ui": "npm run test:e2e -- --ui",
		"test:e2e:changed": "npm run test:e2e -- --only-changed",
		"format": "biome check --write --no-errors-on-unmatched",
		"format:changed": "npm run format -- --changed",
		"format:all": "npm run format .",
		"lint": "biome lint --no-errors-on-unmatched",
		"lint:all": "npm run lint .",
		"lint:all:fix": "npm run lint:all -- --write",
		"lint:changed": "npm run lint -- --changed",
		"lint:changed:fix": "npm run lint -- --write --changed",
		"lint:ts:typecheck": "tsc --project . --noEmit",
		"prepare": "husky"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.0.1",
		"@libsql/client": "^0.15.5",
		"@radix-ui/react-accordion": "^1.2.10",
		"@radix-ui/react-checkbox": "^1.3.1",
		"@radix-ui/react-dialog": "^1.1.13",
		"@radix-ui/react-dropdown-menu": "^2.1.14",
		"@radix-ui/react-label": "^2.1.6",
		"@radix-ui/react-popover": "^1.1.13",
		"@radix-ui/react-select": "^2.2.4",
		"@radix-ui/react-separator": "^1.1.6",
		"@radix-ui/react-slider": "^1.3.4",
		"@radix-ui/react-slot": "^1.2.2",
		"@radix-ui/react-switch": "^1.2.4",
		"@radix-ui/react-tabs": "^1.1.11",
		"@radix-ui/react-tooltip": "^1.2.6",
		"@tanstack/react-table": "^8.21.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"date-holidays": "^3.24.3",
		"i18n-iso-countries": "^7.14.0",
		"lucide-react": "^0.510.0",
		"next": "15.3.2",
		"next-intl": "^4.1.0",
		"next-themes": "^0.4.6",
		"react": "^19.1.0",
		"react-day-picker": "^9.6.7",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.56.3",
		"tailwind-merge": "^3.3.0",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.24.4",
		"zustand": "^5.0.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@commitlint/format": "^19.8.1",
		"@tailwindcss/postcss": "^4.1.6",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^22.15.17",
		"@types/react": "^19.1.3",
		"@types/react-dom": "^19.1.4",
		"@vitejs/plugin-react": "^4.4.1",
		"conventional-changelog-atom": "^5.0.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.0.0",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.1.7",
		"typescript": "^5.8.3",
		"vitest": "^3.1.3"
	}
}
