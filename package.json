{
  "name": "forever-pto",
  "description": "The all-in-one tool to squish your valuable PTO days",
  "keywords": [
    "nextjs",
    "typescript",
    "css",
    "tailwind",
    "cloudflare",
    "pto",
    "time-off",
    "multi-language",
    "seo",
    "turbopack",
    "shadcn",
    "pnpm"
  ],
  "author": "Ferran Buireu <fbuireu@gmail.com>",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=24.0.0"
  },
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf:build": "opennextjs-cloudflare build",
    "deploy": "pnpm run cf:build && opennextjs-cloudflare deploy",
    "upload": "pnpm run cf:build && opennextjs-cloudflare upload",
    "cf:typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "format:changed": "git diff --name-only --diff-filter=ACMR | grep -E \"\\.(js|jsx|ts|tsx|json|css|scss|md)$\" | xargs -r prettier --write",
    "format:all": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:changed": "git diff --name-only --diff-filter=ACMR | grep -E \"\\.(js|jsx|ts|tsx)$\" | xargs -r eslint --fix",
    "lint:all": "eslint",
    "lint:fix": "eslint --fix",
    "lint:ts:typecheck": "tsc --project . --noEmit",
    "test:e2e": "playwright test --pass-with-no-tests",
    "test:e2e:ui": "pnpm run test:e2e -- --ui",
    "test:e2e:changed": "pnpm run test:e2e -- --only-changed",
    "prepare": "husky"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@logtail/edge": "^0.5.7",
    "@logtail/next": "^0.2.1",
    "@opennextjs/cloudflare": "^1.15.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.6",
    "@react-email/render": "^2.0.4",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.3",
    "@tanstack/react-table": "^8.21.3",
    "@tursodatabase/serverless": "^0.1.3",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "date-holidays": "^3.26.6",
    "driver.js": "^1.4.0",
    "i18n-iso-countries": "^7.14.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "motion": "^12.29.0",
    "next": "^16.1.4",
    "next-intl": "^4.7.0",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "react-use-measure": "^2.1.7",
    "recharts": "^3.7.0",
    "resend": "^6.8.0",
    "simple-icons": "^16.6.0",
    "sonner": "^2.0.7",
    "stripe": "^20.2.0",
    "tailwind-merge": "^3.4.0",
    "vanilla-cookieconsent": "^3.1.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/format": "^20.3.1",
    "@commitlint/types": "^20.3.1",
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.17",
    "conventional-changelog-atom": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "wrangler": "^4.60.0"
  }
}
