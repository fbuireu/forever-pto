{
  "$schema" : "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs" : {
    "enabled" : true,
    "useIgnoreFile" : true,
    "clientKind" : "git",
    "defaultBranch" : "main"
  },
  "formatter" : {
    "lineWidth" : 120
  },
  "css" : {
    "formatter" : {
      "enabled" : true
    }
  },
  "linter" : {
    "ignore" : [
      "*.d.ts*"
    ],
    "rules" : {
      "recommended" : true,
      "correctness" : {
        "noUnknownProperty" : "info"
      },
      "suspicious" : {
        "noConsole" : "warn"
      },
      "complexity" : {
        "noForEach" : "warn"
      }
    }
  }
}
